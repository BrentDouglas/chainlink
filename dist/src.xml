<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>src</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>chainlink-${project.version}-src</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>..</directory>
            <excludes>
                <!-- Ignore build output -->
                <exclude>**/target/**</exclude>

                <!-- Ignore git repo -->
                <exclude>**/.git*</exclude>
                <exclude>**/.git/**</exclude>

                <!-- Ignore IDE configuration and other hidden files -->
                <exclude>**/.project</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.settings</exclude>
                <exclude>**/.metadata</exclude>
                <exclude>**/*.iml</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iws</exclude>
                <exclude>**/.idea/**</exclude>

                <!-- Ignore other stuff -->
                <exclude>*.template.properties</exclude>
                <exclude>*.template.xml</exclude>
                <exclude>fakereplace.index</exclude>
                <exclude>**/ide-settings/**</exclude>
                <exclude>**/dist/**</exclude>
                <exclude>**/doc/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
