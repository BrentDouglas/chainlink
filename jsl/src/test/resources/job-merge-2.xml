<?xml version="1.0"?>
<job xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     id="job1" version="1.0">
    <step id="step1" abstract="true">
        <batchlet ref="Doit"/>
    </step>
    <step id="step2" abstract="true">
        <batchlet ref="Doit2"/>
    </step>
    <flow id="flow1" abstract="true">
        <step id="s1" parent="step1" allow-start-if-complete="true"
              next="s2"/>
        <step id="s2" parent="step2"/>
    </flow>
    <!-- This job runs f1 -->
    <flow id="f1" parent="flow1">
        <stop on="ERROR" restart="s1"/>
    </flow>
</job>