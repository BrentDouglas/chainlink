<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>chainlink-tck</artifactId>
        <groupId>io.machinecode.chainlink</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>chainlink-tck-se</artifactId>

    <properties>
        <container.dir>${project.basedir}/target/chainlinkd</container.dir>
        <deployment.dir>${container.dir}/chainlink-${project.version}/app/</deployment.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.machinecode.chainlink</groupId>
            <artifactId>chainlink-tck-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.logging</groupId>
            <artifactId>jboss-logging</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/persistence.xml</include>
                    <include>**/${injector.configuration.destination.file}</include>
                </includes>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-test-resources</id>
                        <phase>generate-test-resources</phase>
                    </execution>
                    <execution>
                        <id>copy-test-artifact</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <jar destfile="${project.build.directory}/chainlink-tck-se-${project.version}.jar" basedir="${project.build.directory}/test-classes"/>
                                <copy file="${project.build.directory}/chainlink-tck-se-${project.version}.jar"
                                      tofile="${deployment.dir}/chainlink-tck-se-${project.version}.jar"
                                      overwrite="true"/>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>start-background-server</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <target>
                                <!-- Setup other instance in case we are testing a clustering registry. -->
                                <unzip src="${project.build.directory}/../../../dist/target/chainlink-${project.version}-chainlinkd.zip"
                                       dest="${container.dir}"/>
                                <chmod file="${container.dir}/chainlink-${project.version}/install" perm="754"/>
                                <exec executable="${container.dir}/chainlink-${project.version}/install"
                                      dir="${container.dir}/chainlink-${project.version}"/>

                                <copy file="${project.basedir}/../chainlink-tck.xml"
                                      tofile="${container.dir}/chainlink-${project.version}/cnf/chainlink-tck.xml"
                                      filtering="true"
                                      overwrite="true">
                                    <filterset>
                                        <filter token="artifact.loader.factory.class" value="${artifact.loader.factory.class}" />
                                        <filter token="execution.repository.factory.class" value="${execution.repository.factory.class}" />
                                        <filter token="executor.factory.class" value="${executor.factory.class}" />
                                        <filter token="registry.factory.class" value="${registry.factory.class}" />
                                        <filter token="injector.factory.class" value="${injector.factory.class}" />
                                        <filter token="job.loader.factory.class" value="${job.loader.factory.class}" />
                                        <filter token="security.check.factory.class" value="${security.check.factory.class}" />
                                        <filter token="transaction.manager.factory.class" value="${transaction.manager.factory.class}" />
                                        <filter token="mbean.server.factory.class" value="${mbean.server.factory.class}" />
                                        <filter token="worker.factory.class" value="${worker.factory.class}" />
                                        <filter token="marshalling.provider.factory.class" value="${marshalling.provider.factory.class}" />
                                    </filterset>
                                </copy>
                                <copy file="${project.basedir}/../chainlink-tck.properties"
                                      tofile="${container.dir}/chainlink-${project.version}/cnf/chainlink-tck.properties"
                                      overwrite="true">
                                </copy>

                                <chmod file="${container.dir}/chainlink-${project.version}/bin/*" perm="754"/>

                                <exec executable="${container.dir}/chainlink-${project.version}/bin/chainlink"
                                      dir="${container.dir}/chainlink-${project.version}/bin">
                                    <arg value="-p"/>
                                    <arg value="chainlink-tck.properties"/>
                                    <arg value="-d"/>
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stop-background-server</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>post-integration-test</phase>
                        <configuration>
                            <target>
                                <!-- Kill instance. Executed from test modules pom -->
                                <exec executable="${container.dir}/chainlink-${project.version}/bin/chainlink"
                                      dir="${container.dir}/chainlink-${project.version}/bin">
                                    <arg value="-k"/>
                                </exec>
                                <exec executable="${container.dir}/chainlink-${project.version}/install"
                                      dir="${container.dir}/chainlink-${project.version}">
                                    <arg value="-u"/>
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-test-sources</id>
                        <phase>generate-test-sources</phase>
                    </execution>
                    <execution>
                        <id>add-test-resources</id>
                        <phase>generate-test-resources</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>process-test-classes</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <skipExec>false</skipExec>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>read-properties</id>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>